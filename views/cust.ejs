<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Customer info</title>
</head>
<link rel="stylesheet" href="/css/cust.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<header>
  <a href="/customers" role="button" class="btn back btn-outline-dark">Back</a>
</header>

<body>
  <div id='transModal'>
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 id="modal-title"></h5>
        </div>
        <div class="modal-body">
          <p id='modalText'></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-dark modalClose">
            Close
          </button>
        </div>
      </div>
    </div>
  </div>
  <%data.forEach(function(x){%>
  <div class="heading">
    <h1><%-x.name%></h1>
  </div>
  <div class="table">
    <table>
      <tr>
        <td style="font-weight:bold">Name</td>
        <td><%-x.name%></td>
      </tr>
      <tr>
        <td style="font-weight:bold">Amount</td>
        <td><%-x.amount%></td>
      </tr>
      <tr>
        <td style="font-weight:bold">Withdrawal</td>
        <td><%-x.withdraw%></td>
      </tr>
    </table>
  </div>
  <form class="form-inline" action='/transfer' method='post'>
    <div>
      <input style="display:none" class="" name='id' value=<%-x.id%>>
      <input style="display:none" class="" name='balance' value=<%-x.amount%>>
      <input style="display:none" class="" name='withdraw' value=<%-x.withdraw%>>
      <input type="text" readonly class="form-control-plaintext" id="transfer" value="Transfer Amount:">
      <input class="form-control" id="amt" name='amt' placeholder="Amount">
      <input type="text" readonly class="form-control-plaintext" id="transferName" value="Transfer To:">
      <select id="transferName" name='transferName' class="form-control">
        <option selected>Choose</option>
        <%fullData.forEach(function(x){%>)
        <option><%-x.name%></option>
        <%})%>
      </select><br><br>
      <input type="submit" id="transBtn" balance=<%-x.amount%> class="btn btn-dark" value='Transfer'>
    </div>
  </form>
  <%})%>
  <script src="/javascript/modal.js"></script>
</body>

</html>
